<div class="page-header">
  <%= link_to new_contact_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Contact
  <% end %>
  <h1>Listing contacts</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Phone mobile</th>
        <th>Messages</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @contacts) do |contact| %>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.phone_mobile %></td>
        <td><%= link_to contact.messages.count, contact_messages_path(contact_id: contact.id) %></td>
        <td><%= link_to "Send Message", new_contact_message_path(contact) %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
      <% end %>
    </tbody>
  </table>
</div>
